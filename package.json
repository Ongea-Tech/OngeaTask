{
  "name": "ongeatask",
  "version": "1.0.0",
  "description": "**Ongea Task** is a simple To-Do List web application created by young developers from **Ongea Tech**  as a learning project to practice full-stack development.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "postcss ./app/static/styles.css -o ./app/static/dist/output.css",
    "dev:css": "postcss ./app/static/styles.css -o ./app/static/dist/output.css -w",
    "flask": "flask --app run.py run --debug --port=5001",
    "serve": "browser-sync start --proxy http://localhost:5001 --files 'app/templates/**/*.html, app/static/dist/output.css, app/**/*.py' --ignore 'app/static/src/**/*' --no-open --port 3000 --reload-delay 150 --no-ui"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "tailwindcss": "^4.1.14"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/postcss": "^4.1.14",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1"
  }
}
